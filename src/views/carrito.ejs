<!DOCTYPE html>
<html lang="en">

<!-- Vista parcial del head -->
<%- include('./partials/head.ejs') %>
<body>
   <!-- Vista parcial del header -->
    <%- include('./partials/header.ejs') %>
    <br>
    <br>

   
     
    <!-- Contenido principal -->
    <main class="flexCarrito">
        
        <section class="tituloCarrito">
            <p>TU CARRO DE LA COMPRA</p>
            
        </section>

        <% for (let i=0 ; i<5 ; i++ ) { %>
        <section class="productoDeCarrito">

            <section class="carritoImagen">
            <img src="/Images\productos\computadoras\Alienware M15 R4 Gaming Laptop I7-10870h 16gb Rtx 3070 512gb.PNG" id="logo">
            </section>

            <section class="carritoDetalles">
            <p class="nombreProducto">NOMBRE DEL PRODUCTO</p>
            <P class="detallesProducto">DETALLES DEL PRODUCTO</P>
            <p class="cantidadProducto">CANTIDAD</p>
            </section>

            <section class="carritoPrecio">
            <p class="precioProducto"> $5,999MXN</p>
            <span class="eliminarProducto">Eliminar</span> 
            </section>
        </section>
        <% }  %>

        

        

     

        
        
        <section class="comprarCarrito">
            <section>
                <form action="">
                    <label for="opciones">Método de pago</label>
                    <br>
                    <select name="opciones" >
                
                        <option value="1">Opción 1</option>
                        <option value="2">Opción 2</option>
                        <option value="3">Opción 3</option>
                    </select>
                </form>
            </section>
            <section>
                TOTAL: $9,460 MXN
            </section>

            <section >
                <button class="eliminar">ELIMINAR TODO EL CARRITO</button>
            </section>

            <section>
                <button class="comprar">COMPRAR</button>
            </section>
        </section>




    </main>



    <br>


     <!-- Vista parcial del footer -->
     <%- include('./partials/footer.ejs') %>
</body>
</html>