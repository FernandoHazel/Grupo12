<!DOCTYPE html>
<html lang="en">

<!-- Vista parcial del head -->
<%- include('./partials/head.ejs') %>
<body>
    
    <!-- Vista parcial del header -->
    <%- include('./partials/header.ejs') %>

    <br>
    <br>
    <!-- Contenido principal -->
    <main>
        <!-- Instalaciones --> 
        <h2>Ofertas</h2>
        <section id="section-offers">
            <% offerts.forEach(offert =>{ %>
                <div class="content-offers">
                    <div class="offer-img">
                        <img src="<%= offert.img %>">
                    </div>
                    
                    <div class="offer-details">
                    <h3><%= offert.product_title%></h3>
                    <p class="descount">-<%= offert.offert %> % </p>
                    </div>
                </div>
            <% }) %>
        </section>
        <br>
        <!-- Lo más productos más vendidos -->
        <h2>Lo más vendido</h2>
        <section id="section-products">

            <% mostSales.forEach(sale => { %>
                <div class="content-product">
                    <div class="product-img">
                        <img src="<%= sale.img %>">
                    </div>
    
                    <div class="product-details">
                        <h3><%= sale.name %></h3>
                        <p><%= sale.price  %></p>
                    </div>
                </div>
            <% }) %>
        </section>
    </main>
    <br>
     <!-- Vista parcial del footer -->
     <%- include('./partials/footer.ejs') %>
</body>
</html>